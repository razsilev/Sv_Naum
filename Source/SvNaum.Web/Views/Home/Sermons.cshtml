@model IEnumerable<SvNaum.Models.Sermon>

@{
    ViewBag.Title = "Проповеди";
}

<br />
@if (this.User.Identity.IsAuthenticated)
{
    @Html.ActionLink("Create Sermon", "SermonAdd", "Admin")
    <br />
    <br />
}

@if (Model != null && Model.Count() > 0)
{

    foreach (var item in Model)
    {
      
            @*@Html.LabelFor(m => item.Theme)*@
            @*@Html.DisplayFor(m => item.Theme)*@
    <article>
            <h2>
                @Html.DisplayFor(m => item.Title)
            </h2>
            <p>
                @Html.Raw(item.Text)
            </p>
            <br />
            <div class="avtor">
                @Html.DisplayFor(m => item.Author)
            </div>
            <br />

            @Html.DisplayFor(m => item.Date.ToLocalTime().GetDateTimeFormats()[1])
            <br />
            <br />
            <div id="socialNetworks">
                <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-action="like" data-show-faces="true" data-share="true">
                </div>
                <div id="twitter">
                    <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
                </div>
                <div class="g-plusone" data-size="medium" data-annotation="bubble" data-width="100">
                </div>
            </div>

            @if (this.User.Identity.IsAuthenticated)
            {
                <div>
                    @Html.ActionLink("Edit", "SermonEdit", "Admin", new { id = item.Id }, null)
                    &nbsp;
                    @Html.ActionLink("Delete", "SermonDelete", "Admin", new { id = item.Id }, new { @class = "text-danger" })
                </div>
            }

        </article>
    }
}
else
{
    <h3>There is no sermons!</h3>
}
